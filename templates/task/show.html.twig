{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}

<div class="container m-auto text-center mt-4">
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ task.details }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ task.status }}</td>
            </tr>
        </tbody>
    </table>

    <a class="" href="{{ path('app_task_index') }}">back to list</a>

    <a  class="mx-5" href="{{ path('app_task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}


</div>
{% endblock %}
